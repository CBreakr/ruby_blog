<div class="post_element">
  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>
  <%= link_to "Edit",
  edit_post_path(@post),
  :class => "btn btn-secondary" %>

  <%= link_to "Delete", post_path(@post),
  method: :delete,
  data: {confirm: "Are you sure?"},
  :class => "btn btn-danger" %>

  <hr />

  <%= render "comments/comments" %>
  <br />
  <%= render "comments/form" %>
</div>
