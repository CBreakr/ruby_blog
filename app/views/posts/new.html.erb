<h1>Add New Post</h1>
<!-- sends to the url of the post CREATE method -->
<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <% f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
